/* 弹性盒子 开始 */
/* flex容器属性 开始 */
flex-box()
  display: -webkit-box
  display: -webkit-flex
  display: flex

/* 水平 */
/* 规定flex项目在水平方向上的对齐方式 */
justify-content-start()
  -webkit-box-pack: start
  -webkit-justify-content: flex-start
  justify-content: flex-start
justify-content-center()
  -webkit-box-pack: center
  -webkit-justify-content: center
  justify-content: center
justify-content-end()
  -webkit-box-pack: end
  -webkit-justify-content: flex-end
  justify-content: flex-end

/* 垂直 */
/* 规定flex项目在垂直方向上的对齐方式 */
align-items-start()
  -webkit-box-align: start
  -webkit-align-items: flex-start
  align-items: flex-start
align-items-center()
  -webkit-box-align: center
  -webkit-align-items: center
  align-items: center
align-items-end()
  -webkit-box-align: end
  -webkit-align-items: flex-end
  align-items: flex-end

/* 规定灵活项目的方向 */
flex-direction-row()
  -webkit-box-orient: horizontal
  -webkit-flex-direction: row
  flex-direction: row
flex-direction-column()
  -webkit-box-orient: vertical
  -webkit-flex-direction: column
  flex-direction: column
/* flex容器属性 结束 */


/* flex项目属性 开始 */
/* flex项目份数 */
flex-n($n)
  -webkit-box-flex: $n
  -webkit-flex: $n
  flex: $n

/* 规定flex项目自身在垂直方向上的对齐方式 */
align-self-start()
  -webkit-align-self: flex-start
  align-self: flex-start
align-self-center()
  -webkit-align-self: center
  align-self: center
align-self-end()
  -webkit-align-self: flex-end
  align-self: flex-end
/* flex项目属性 结束 */
/* 弹性盒子 结束 */


/* 过渡 开始 */
transition($prop, $duration, $func)
  -webkit-transition: $prop $duration $func; transition: $prop $duration $func
/* 规定设置过渡效果的 CSS 属性的名称 */
transition-prop($prop)
  -webkit-transition: $prop
  transition: $prop
/* 规定完成过渡效果需要多少秒或毫秒 */
transition-speed-nth($n)
  -webkit-transition-duration: $n
  transition-duration: $n
/* 规定速度效果的速度曲线 */
transition-timing-function($func)
  -webkit-transition-timing-function: $func
  transition-timing-function: $func
/* 过渡 结束 */


/* 转换 开始 */
translate-3d($x, $y, $z)
  -webkit-transform: translate3d($x, $y, $z)
  transform: translate3d($x, $y, $z)

/* 定义3d旋转 */
rotate-3d($x, $y, $z)
  -webkit-transform: rotate3d($x, $y, $z)
  transform: rotate3d($x, $y, $z)

/* 定义沿着Z轴的3d旋转 */
rotate-z($z)
  -webkit-transform: rotateZ($z)
  transform: rotateZ($z)
/* 转换 结束 */